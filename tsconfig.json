{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "jsx": "react",
        "outDir": "./dist/",
        "watch": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@components/*": ["./components/*"],
            "@example/*": ["./example/*"],
            "@fonts/*": ["./example/fonts/*"],
			"@asstes/*": ["./example/assets/*"],
			"@containers/*": ["./example/containers/*"],
			"@mock/*": ["./example/mock/*"],
			"@router/*": ["./example/router/*"],
			"@store/*": ["./example/store/*"],
			"@styles/*": ["./example/styles/*"],
			"@utils/*": ["./example/utils/*"]
        }
    },
    "include": [
        "./components/**/*",
        "./example/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}